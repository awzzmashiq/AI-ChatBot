# Study Buddy App Environment Variables
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your_jwt_secret_key_here_generate_with_python_secrets

# Theta AI API Configuration
THETA_API_KEY=your_theta_api_key_here
THETA_API_URL=https://api.thetavideoapi.com/video

# OpenAI API Configuration (if using OpenAI instead of Theta)
# OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face Configuration
# HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# Google OAuth Configuration (for Google Drive integration)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Demo Security Configuration
DEMO_MODE=true
DEMO_CODE_1=INVESTOR_ACCESS_2024
DEMO_CODE_2=POC_SHOWCASE_KEY
DEMO_CODE_3=STARTUP_DEMO_PASS

# CORS Configuration (update with your actual domains)
CORS_ORIGINS=https://your-app.vercel.app,https://your-custom-domain.com

# Railway-specific Configuration
PORT=5000
HOST=0.0.0.0

# Database Configuration (if using external database)
# DATABASE_URL=your_database_url_here

# File Upload Limits
MAX_CONTENT_LENGTH=50MB
UPLOAD_FOLDER=uploads 